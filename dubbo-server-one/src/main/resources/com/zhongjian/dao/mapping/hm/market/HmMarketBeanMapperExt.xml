<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhongjian.dao.entity.hm.market.HmMarketBean">
    <resultMap id="BaseMarket" type="com.zhongjian.dto.hm.shopown.result.HmShopownResultDTO">
        <id column="id" property="id"/>
        <result column="ename" property="marketName" jdbcType="VARCHAR"/>
        <result column="rule" property="rule" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="INTEGER"/>
    </resultMap>

    <select id="findMarketByUid" parameterType="java.lang.Integer" resultMap="BaseMarket">
      SELECT
      DISTINCT(m.id),
        	m.ename,
            ma.rule,
            ma.type
      FROM
            hm_basket b
            LEFT join hm_goods s on b.gid = s.id
            left join hm_shopown g on g.pid = s.pid
            left join hm_market m on m.id =g.marketid
            left join hm_market_activity ma ON m.id =ma.marketid
       where b.uid=#{uid,jdbcType=INTEGER}
    </select>
</mapper>